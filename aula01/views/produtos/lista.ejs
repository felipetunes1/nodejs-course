<% include ../includes/header.ejs %>

    <!-- FINAL NAV -->
    <div>
        <div class ="container min-container">
            <h2 class="basic-title">Listagem de livros</h2>
            <div class="well">
                <table class="table table-condensed table-bordered table-striped table-hover">
                    <thead>
                    <tr>
                        <td><a href="">Título</a></td>
                        <td><a href="">Preço</a></td>
                        <td><a href="">Descrição</a></td>
                    </tr>
                    </thead>
                    <tbody>
                        <% for(produto of listaProdutos) { %>
                            <tr onclick="window.location.href='/produtos/<%= produto.id %>'">
                                <td><%= produto.titulo %> </td>
                                <td><%= produto.preco %></td>
                                <td><p><%= produto.descricao %></p></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <% if(listaProdutos.length === 1) { %>
                    <a href="/produtos/" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Voltar</a>
                    <a href="/produtos/form" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Editar</a>
                <% } else { %>
                <a href="/produtos/form" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Novo livro</a>
                <% } %>
            </div>
        </div>
    </div>
<% include ../includes/footer.ejs %>
